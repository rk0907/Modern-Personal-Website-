<script>
/* Robust initialisation and fallbacks.
   - Wait for DOMContentLoaded
   - Build skill bars and radar chart reliably
   - Download page HTML (self-contained) on button click
*/

document.addEventListener('DOMContentLoaded', () => {
  try {
    const skills = [
      {label:'Process Automation', value:92},
      {label:'HMI & Ladder Logic', value:86},
      {label:'Safety Management', value:88},
      {label:'Electrical Installations', value:80},
      {label:'Diagnostics & Troubleshooting', value:85},
      {label:'AI / Prompt Eng.', value:64},
      {label:'MS Office', value:78}
    ];

    // populate left skill bars
    const skillsList = document.getElementById('skillsList');
    skillsList.innerHTML = '';
    skills.slice(0,6).forEach(s=>{
      const row = document.createElement('div');
      row.className = 'skillRow';
      row.innerHTML = `<div class="skillLabel">${s.label}</div><div class="bar" aria-hidden><i style="width:${Math.max(3, Math.min(100,s.value))}%"></i></div><div style="min-width:34px;text-align:right;color:var(--muted);font-size:13px">${s.value}%</div>`;
      skillsList.appendChild(row);
    });

    // radar chart
    const radarCtx = document.getElementById('radarChart').getContext('2d');
    const labels = skills.map(s=>s.label);
    const values = skills.map(s=>s.value);

    // destroy existing chart if exists (safety when Hot reloading in some environments)
    if (window._radarChartInstance) {
      try { window._radarChartInstance.destroy(); } catch(e){ /* ignore */ }
    }

    window._radarChartInstance = new Chart(radarCtx, {
      type: 'radar',
      data: {
        labels,
        datasets: [{
          label: 'Skill strength',
          data: values,
          borderWidth: 2,
          pointRadius: 3,
          fill: true,
          backgroundColor: 'rgba(110,231,183,0.14)',
          borderColor: 'rgba(110,231,183,0.95)',
          pointBackgroundColor: 'rgba(110,231,183,0.95)'
        }]
      },
      options: {
        scales: {
          r: {
            beginAtZero: true,
            suggestedMax: 100,
            grid: { color: 'rgba(255,255,255,0.03)' },
            angleLines: { color: 'rgba(255,255,255,0.03)' },
            ticks: { color: '#9aa4b2', stepSize: 20 }
          }
        },
        plugins: { legend: { display: false } },
        maintainAspectRatio: false
      }
    });

    // Download HTML button: serializes current document into a downloadable blob
    document.getElementById('downloadBtn').addEventListener('click', () => {
      try {
        // Clone documentElement and strip out the download button label to avoid recursion
        const clone = document.documentElement.cloneNode(true);
        // Optional: remove any scripts that might cause issues on open (we will keep inlined script)
        // Replace the download button label so saved file doesn't auto-download again without user action
        const clonedHtml = clone.outerHTML.replace(/Download HTML/g, 'Download (saved copy)');
        const blob = new Blob([clonedHtml], {type: 'text/html;charset=utf-8'});
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'reuben-pra-obeng-portfolio.html';
        document.body.appendChild(a);
        a.click();
        a.remove();
        URL.revokeObjectURL(url);
      } catch (err) {
        console.error('Download failed:', err);
        alert('Download failed — see console for details.');
      }
    });

    // small UX: double-click email/phone copies to clipboard
    document.querySelectorAll('a[href^="mailto:"], a[href^="tel:"]').forEach(el=>{
      el.addEventListener('dblclick', (ev)=>{
        ev.preventDefault();
        const text = el.textContent.trim();
        navigator.clipboard?.writeText(text).then(()=> {
          // little non-blocking notice
          const n = document.createElement('div');
          n.textContent = 'Copied to clipboard';
          n.style.position='fixed'; n.style.right='16px'; n.style.bottom='16px';
          n.style.background='rgba(0,0,0,0.6)'; n.style.color='#fff'; n.style.padding='8px 12px';
          n.style.borderRadius='8px'; n.style.zIndex=9999;
          document.body.appendChild(n);
          setTimeout(()=>n.remove(),1200);
        });
      });
    });

    console.log('Portfolio initialized successfully.');
  } catch (err) {
    console.error('Initialization error:', err);
    alert('There was an error initializing the page. Open the browser console for details.');
  }
});
</script>
</body>
