<script>
/*
  Populates charts & adds export download.
  Charts use heuristic numeric values derived from CV (set below).
  Source CV: REUBEN PRA-OBENG CV |2 .pdf.pdf. (Used to prefill content.)
*/

// skill values (0-100) — chosen to reflect CV emphasis
const skillLabels = [
  'Process Automation',
  'HMI & Ladder Logic',
  'Safety Management',
  'Electrical Installations',
  'Diagnostics & Troubleshooting',
  'AI / Prompt Eng.'
];
const skillValues = [92, 86, 88, 80, 85, 64];

const ctx = document.getElementById('radarChart').getContext('2d');
const radar = new Chart(ctx, {
  type: 'radar',
  data: {
    labels: skillLabels,
    datasets: [{
      label: 'Skill strength',
      data: skillValues,
      borderWidth: 2,
      pointRadius: 4,
      fill: true,
      backgroundColor: 'rgba(110,231,183,0.14)',
      borderColor: 'rgba(110,231,183,0.95)',
      pointBackgroundColor: 'rgba(110,231,183,0.95)'
    }]
  },
  options: {
    scales: {
      r: {
        beginAtZero: true,
        suggestedMax: 100,
        grid: { color: 'rgba(255,255,255,0.03)' },
        angleLines: { color: 'rgba(255,255,255,0.03)' },
        ticks: { color: '#9aa4b2', stepSize: 20 }
      }
    },
    plugins: { legend: { display: false } },
    maintainAspectRatio: false
  }
});

// Export page as standalone HTML (serializes the document)
document.getElementById('downloadBtn').addEventListener('click', () => {
  // Build a minimal standalone HTML by serializing only <html> outerHTML,
  // but replace the Export button with a note to avoid recursion.
  const docHtml = document.documentElement.outerHTML
    .replace(/Export HTML/g, 'Exported HTML (open file to use Export again)');
  const blob = new Blob([docHtml], { type: 'text/html;charset=utf-8' });
  const url = URL.createObjectURL(blob);
  const a = document.createElement('a');
  a.href = url;
  a.download = 'reuben-pra-obeng-portfolio.html';
  document.body.appendChild(a);
  a.click();
  a.remove();
  URL.revokeObjectURL(url);
});

// small enhancement: copy contact to clipboard
function copyToClipboard(text){
  navigator.clipboard?.writeText(text).then(()=>alert('Copied to clipboard'), ()=>alert('Copy failed'));
}

// add double-click on email to copy
document.querySelectorAll('a[href^="mailto:"], a[href^="tel:"]').forEach(el=>{
  el.title = 'Double-click to copy';
  el.addEventListener('dblclick', (e)=>{
    e.preventDefault();
    copyToClipboard(el.textContent.trim());
  });
});
</script>
